<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinalS8.Vistas.Vista_Agregar"
             Title="Vista_Agregar">
    <ScrollView>
        <VerticalStackLayout Padding="25" Background="#EAFAF1">
            <Label 
      Text="Crear Orden De Mantenimiento"
      FontSize="25"
      HorizontalTextAlignment="Center"
     TextColor="#BA4A00"/>

            <Entry x:Name="txtTrabajoSolicitado"  Placeholder="Trabajo Solicitado"  Margin="10" BackgroundColor="#117A65"/>

            <Entry x:Name="txtEmpSolicitante" Placeholder="Empresa Solicitante" Margin="10" BackgroundColor="#117A65" />

            <Entry x:Name="txtDepSolicitado"   Placeholder="Solicitado A"  Margin="10" BackgroundColor="#117A65"/>

        <Label Text="Fecha de Emision"  Margin="10" />
        <DatePicker x:Name="txtFecha" Format="yyyy-MM-dd" Margin="10" BackgroundColor="Chocolate"/>

        <Button x:Name="btnGuardar"
        Text="Guardar Orden"
                Clicked="btnGuardar_Clicked"
                 Margin="30"
                Background="Gray"/>
        
    </VerticalStackLayout>
        </ScrollView>
</ContentPage>